{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "es2020",
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "es2015"
    ],
    "types": [
      "vue"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/index.tsx",
  ],
  "exclude": [
    "node_modules"
  ],
}
